@import "../common/index.wxss";
.page-body-info {
  height: 150rpx;
}
.userinfo-avatar {
  border-radius: 60rpx;
  width: 60rpx;
  height: 60rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 30rpx;
}
.attr_box {
  width: 100%;
  height: 18vh;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  background: #fff;
  flex-direction:colum;
  text-align: left;
}

.bar_box {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  background: #fff;
  flex-direction:colum;
  text-align: left;
 
}

.weui-grids-nav {
  overflow: hidden;
}
.weui-grid-nav {
  position: relative;
  float: left;
  padding: 10px;
  padding-top: 20px;
  width: 20%;
  box-sizing: border-box;
}
.weui-grid_active-nav {
  background-color: #ECECEC;
}
.weui-grid__icon-nav {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}
.weui-grid__label-nav {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.controls {
  position: relative;
  height: 30px;
  width:  30px;
  padding: 3px;
  margin-top: 10px;
  margin-left: 660rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border: 1px solid #fff;
  border-radius: 2px;
  opacity: 0.9;
  flex-direction:column;
}
.center{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.center-img{
    width:18px; height: 18px;
    margin-left: 5px;

}
.center-text{
   margin-left: 4px;
   font-size: 10px;
}
.controls-box-bottom {
  width: 100%;
  height: 8vh;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  background: #fff;
  flex-direction:row;
  text-align: left;
}