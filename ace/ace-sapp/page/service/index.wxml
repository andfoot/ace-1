<view class="index">
  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindcallouttap="callouttap" bindtap="bindtap" bindmarkertap="markertap" polyline="{{polyline}}" circles="{{circles}}"
    bindregionchange="regionchange" show-location="true" style="width: 100%; height: {{view.height}}; ">
  </map>

  <view class="attr_box" wx:if="{{showModalStatus}}">

    <navigator url="../organization/index?id={{o.id}}" class="navigator">
      <view class="navigator-text" style="flex-direction:column;">
        <view class="title-strong-big2">{{o.name}}</view>
        <view style="font-size:14px;">
          <image class="iconList" src="../../image/pin_location_50.04px_1189687_easyicon.net.png" mode="aspectFit" />{{o.addr}}</view>
        <view style="font-size:14px">
          <image class="iconList" src="../../image/phone_32.088397790055px_1187704_easyicon.net.png" mode="aspectFit" />{{o.tel}}
          <image class="iconList" src="../../image/time_71.003460207612px_1195888_easyicon.net.png" mode="aspectFit" /> {{o.serviceTimeStart}}-{{o.serviceTimeEnd}}</view>
      </view>
      <view class="navigator-arrow"></view>
    </navigator>


    <button type="primary" bindtap="navigator" style="width:95%">详细</button>
  </view>

  <view class="bar_box" wx:if="{{showBarStatus}}">

    <view class="weui-grids-nav">
      <block wx:for="{{listCategory}}" wx:key="{{item.id}}">

        <navigator url="../service/index?category={{item.id}}" class="weui-grid-nav" hover-class="weui-grid_active-nav">
          <view style="flex-direction:column;" bindtap="query" id="{{item.id}}">
          <image class="weui-grid__icon-nav" src="{{serverfile}}{{item.icon}}" />
          <view class="weui-grid__label-nav">{{item.name}}</view>
          </view>
        </navigator>

      </block>
    </view>
  </view>

</view>