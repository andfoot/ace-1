.tzzl {
    padding: 0 32rpx;
    width: 100%;
    height: 100%;
}

.loading {
    width: 686rpx;
    padding: 10rpx 0rpx;
    text-align: center;
}

.loading:before {
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background: url(../../image/1.gif) no-repeat;
    background-size: contain;
    animation: rotate 1s linear infinite;
}

.loading.complete:before {
    display: none;
}
