.center {
  width: 100%;
  display: flex;
  justify-content: center;
}

.weui-grids-nav {
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
  overflow: hidden;
}

.weui-grid-nav {
  position: relative;
  float: left;
  padding: 10px 10px;
  width: 33.3333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.weui-grid_active-nav {
  background-color: #ececec;
}

.weui-grid__icon-nav {
  display: block;
  width: 40px;
  height: 40px;
  margin: 0 auto;
}

.weui-grid__label-nav {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.reg-top {
  background: #fff;
  flex-direction: column;
  padding: 30px;
}

.reg-title {
  font-size: 16px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20px;
}

.reg-icon {
  width: 60px;
  height: 60px;
}

.reg-logo-panel {
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom {
  padding-top: 30px;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  position: fixed;
  bottom: 20px;
}

.iconList {
  width: 25px;
  height: 25px;
  padding-right: 10rpx;
  vertical-align: bottom;
}

.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
  text-align: center;
  line-height: 82rpx;
  height: 7%;
}

.swiper-tab-list {
  width: 50%;
  font-size: 32rpx;
  display: inline-block;
  color: #666;
  font-weight: bold;
}

.on {
  color: #d83e3f;
  font-size: 34rpx;
}

.on .bottom1 {
  border-bottom: 0rpx solid #d83e3f;
  border-bottom-width: 4rpx;
}

.swiper-box {
  display: block;
  height: 93%;
  width: 100%;
  overflow: hidden;
}

.image {
  width: 55rpx;
  height: 68rpx;
}

.fileContent {
  display: table;
  font-size: 26rpx;
  color: #999;
  margin: 0rpx 34rpx;
  padding: 48rpx 0;
  border-bottom: #e5e5e5 solid 1rpx;
}

.imgLeft {
  float: left;
  width: 80rpx;
  margin-top: 40rpx;
}

.fontRight {
  float: left;
  width: 588rpx;
  margin-top: 32rpx;
}

.fileName {
  font-size: 30rpx;
  color: #222;
}

.remark {
  padding-top: 15rpx;
  color: #d83e3f;
}

.bottom1 {
  margin: 0 auto;
  width: 80rpx;
  height: 3rpx;
}
