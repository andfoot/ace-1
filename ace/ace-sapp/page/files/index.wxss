.navbar {
    font-weight: bold;
    font-size: 32rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #fff;
    border-bottom: 1px #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    font-size: 34rpx;
    color: #d83e3f;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 80rpx;
    margin: 0 auto;
    background: #d83e3f;
}

.tzwj {
    padding: 0 32rpx;
    width: 100%;
    height: 100%;
}

.image {
    width: 55rpx;
    height: auto;
}

.fileContent {
    width: 686rpx;
    display: table;
    font-size: 26rpx;
    color: #999;
    padding: 30rpx 0;
    border-bottom: #e5e5e5 solid 1rpx;
}

.imgLeft {
    vertical-align: top;
    display: inline-block;
    width: 80rpx;
    margin-top: 30rpx;
}

.fontRight {
    vertical-align: top;
    display: inline-block;
    width: 605rpx;
    margin-top: 20rpx;
}

.fileName {
    font-size: 30rpx;
    color: #222;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.remark {
    padding-top: 10rpx;
    color: #d83e3f;
    width: 605rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.warehouse {
    display: block;
    width: 100%;
}

